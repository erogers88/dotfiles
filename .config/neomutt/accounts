# vim: filetype=muttrc

# Name and Address
set from = "erik@rogers-family.net"
set realname = "Erik Rogers"
set imap_user = "erik"
set sendmail = "msmtp -a personal"
unset record

# Mailboxes
set folder = "$HOME/Maildir/personal"
set spoolfile = "+Inbox"
set postponed = "+Drafts"
set record = "+Sent"
set trash = "+Trash"

# mbsync
macro generic,index,pager S "<shell-escape>mbsync personal<enter>"

# Dynamically get all folders
mailboxes `ls "$HOME"/Maildir/personal | sed -e 's/\</\+/;s/\r/\s/' | tr '\n' ' '`
